// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String         @id
  email        String         @unique
  name         String
  createdAt    DateTime       @default(now())
  transactions Transaction[]
  aiResponses  AiResponse[]
}

model Transaction {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String

  date        DateTime
  amount      Float
  currency    String   @default("EUR")
  merchant    String
  description String?
  category    String   // e.g. "bnpl", "groceries", "income"

  createdAt   DateTime @default(now())
}

model AiResponse {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  prompt    String
  response  String
  model     String?
  metadata  Json?

  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}
